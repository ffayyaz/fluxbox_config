[end]

# group,position,dimension chromium instances in one workspace
[group] (workspace)
    [app] (name=Chromium) (class=Chromium)
        [Dimensions]    {100% 100%}
        [Position]      (TOPLEFT) {0 0}
        [Maximized]]    {yes}
        [Head]          {1}
        [Tab]           {no}
        [FocusNewWindow] {yes}
[end]

