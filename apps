[app] (name=fbrun)
  [Position]	(WINCENTER)	{0 0}
  [Layer]	{2}
[end]

# force skype to be started in workspace 4
[app] (Skype)
    [Workspace]     {3}
    [Jump]          {true}
    [Position]      {BOTTOMLEFT} {0 0}
[end]

# group urxvt instances in one workspace
[group] (workspace)
  [app] (urxvt)
    [Dimensions]    {485 340}
    [Position]      {TOPLEFT} {0 0}
[end]

# group wync instances in one workspace
[group] (workspace)
  [app] (Wync)
    [Position]      {BOTTOMRIGHT} {0 0}
[end]

# group chromium instances in one workspace
[group] (workspace)
  [app] (Chromium)
    [Position]      {TOPLEFT} {0 0}
    [Maximized]     {yes}
[end]

# group iceweasel instances in one workspace
[group] (workspace)
  [app] (Navigator)
    [Position]      {TOPLEFT} {0 0}
    [Maximized]     {yes}
[end]

