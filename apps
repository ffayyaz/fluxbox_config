    [app] (name=urxvt-desktop-top)
        [Dimensions]    {93% 50%}
        [Position]      (TOPLEFT) {0 0}
        [Sticky]        {yes}
        [Head]          {1}
        [Layer]         {12}
        [FocusNewWindow] {no}
        [FocusHidden]   {yes}
        [IconHidden]    {yes}
[end]

