[app] (name=fbrun)
    [Position]          (WINCENTER) {0 0}
    [Layer]             {2}
[end]

# group and position chat programs in all workspaces
[group] 
    [app] (wync)
    [app] (skype)
        [Dimensions]    {100% 50%}
        [Position]      (BOTTOMLEFT) {0 0}
        [Sticky]        {yes}
[end]

# group urxvt instances in one workspace
[group] (workspace)
    [app] (urxvt) 
        [Dimensions]    {50% 50%}
        [Position]      (TOPLEFT) {0 0}
        [Sticky]        {yes}
[end]

# position gnome-terminal
[app] (gnome-terminal-server)
        [Dimensions]    {50% 50%}
        # [Position]      (TOPLEFT) {0 0}
        [Workspace]     {2}
        [Jump]          {yes}
[end]

